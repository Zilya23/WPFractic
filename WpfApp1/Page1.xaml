<Page x:Class="WpfApp1.Page1"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WpfApp1"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Page1">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <TextBlock Text="Авторизация" FontSize="36"/>
        <TextBlock Text="Login" FontSize="36" Grid.Column="0" Grid.Row="1"/>
        <TextBlock x:Name="txt_pass" Text="Password" FontSize="36" Grid.Column="0" Grid.Row="2"/>
        <TextBox x:Name="txt_login" Grid.Column="1" Grid.Row="1"/>
        <PasswordBox x:Name="txt_password" Grid.Column="1" Grid.Row="2"/>
        <Button Content="log in" Grid.Column="0" Grid.Row="5" Click="auto_click"/>
        <Button Content="reg" Grid.Column="1" Grid.Row="5" Click="Button_Click"/>
    </Grid>
</Page>
